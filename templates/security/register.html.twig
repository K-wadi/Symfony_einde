{% extends 'base.html.twig' %}

{% block title %}Registreren - Webshop{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center mb-0">Registreren</h3>
                </div>
                <div class="card-body">
                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success">{{ flash_message }}</div>
                    {% endfor %}
                    
                    {% for flash_message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ flash_message }}</div>
                    {% endfor %}
                    
                    {{ form_start(registrationForm, {'attr': {'data-turbo': 'false'}}) }}
                    
                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-danger">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}
                    
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(registrationForm.email) %}
                            <div class="text-danger">{{ form_errors(registrationForm.email) }}</div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(registrationForm.plainPassword.first) %}
                            <div class="text-danger">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(registrationForm.plainPassword.second) %}
                            <div class="text-danger">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                        {% endif %}
                        {% if form_errors(registrationForm.plainPassword) %}
                            <div class="text-danger">{{ form_errors(registrationForm.plainPassword) }}</div>
                        {% endif %}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {% if form_errors(registrationForm.agreeTerms) %}
                            <div class="text-danger">{{ form_errors(registrationForm.agreeTerms) }}</div>
                        {% endif %}
                    </div>

                    <div class="d-grid">
                        {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>

                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-3">
                        <p>Al een account? <a href="{{ path('app_login') }}">Log hier in</a></p>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Terug naar Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %} 