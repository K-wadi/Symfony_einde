{% extends 'base.html.twig' %}

{% block title %}Nieuw Product - Admin{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Nieuw Product Toevoegen</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.naam, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.naam, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.naam) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.prijs, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prijs, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prijs) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.beschrijving, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.beschrijving, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.beschrijving) }}
                    </div>

                    <div class="d-grid">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>

                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('app_product_admin') }}" class="btn btn-outline-secondary">Annuleren</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %} 